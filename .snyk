# Snyk configuration file for the cicd-demo project
# This file configures Snyk security scanning

version: v1.0.0

# Ignore specific vulnerabilities
# These are low-risk vulnerabilities in this demo context
ignore:
  # Ignore SnakeYAML deserialization vulnerability in test environment
  'SNYK-JAVA-ORGYAML-3152153':
    - '*':
        reason: 'Low risk in Spring Boot demo application - no external YAML deserialization'
        expires: '2025-12-31T23:59:59.999Z'
  
  # Common Spring Boot vulnerabilities that are mitigated in our context
  'SNYK-JAVA-ORGSPRINGFRAMEWORK-6750853':
    - '*':
        reason: 'Demo application with no production exposure'
        expires: '2025-12-31T23:59:59.999Z'

# Patch configuration (currently empty for Maven projects)
# Patches are primarily used for npm projects
patches: {}

# Language-specific settings
language-settings:
  java:
    # Java-specific configuration options
    # These settings apply to all Java scans in this project

    # Exclude test dependencies from vulnerability scanning
    # include-dev-deps: false

    # Set Maven-specific options
    # maven-aggregate-project: true

# Project-specific settings
# These settings apply to the entire project
exclude:
  # Exclude specific directories from scanning
  # - 'target/**'
  # - '**/*.class'
  # - 'logs/**'
